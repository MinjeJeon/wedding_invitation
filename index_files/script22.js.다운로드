*/

var bankArr = [];
bankArr.length = $('.key').length;

for(var inx=0; inx<$('.key').length; inx++)
{
	var targetKey = $('.key')[inx];
	bankArr[inx] = targetKey.innerText;

	targetKey.addEventListener('mouseover', (e) => { var copy = $(e.srcElement).parent().find('.copy'); copy.removeClass('hide'); });
	targetKey.addEventListener('mouseleave', (e) => { var copy = $(e.srcElement).parent().find('.copy'); copy.addClass('hide'); });

	targetKey.addEventListener('click', (e) => {
		var copy = $(e.srcElement).parent().find('.copy');
		var copied = $(e.srcElement).parent().find('.copied');

		copy.addClass('hide');
		copied.removeClass('hide');
		var copyIdx = 0;
		for(var jnx=0; jnx<$('.key').length; jnx++)
		{
			if($('.copy')[jnx] == copy[0])
			{
				copyIdx = jnx;
				break;
			}
		}
		
		let helperInput = document.createElement('input');
		document.body.appendChild(helperInput);
		helperInput.value = bankArr[jnx];
		helperInput.select();
		document.execCommand('copy');
		document.body.removeChild(helperInput);
		
		setTimeout( () => {
			var copieds = $('.copied');
			for(var jnx=0; jnx<copieds.length; jnx++)
				$(copieds[jnx]).addClass('hide');
		}, 2000);
	})
}