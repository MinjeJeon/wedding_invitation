// javascript ver.

//전체모션

let fadeinItem = document.getElementsByClassName('fadein');

function scrollFadeIn() {
    for (let i = 0; i < fadeinItem.length; i++) {
        let
            rect = fadeinItem[i].getBoundingClientRect(),
            scrollTop = window.pageYOffset || document.documentElement.scrollTop,
            elemPos = rect.top + scrollTop,
            windowHeight = window.innerHeight;

        if (scrollTop > elemPos - windowHeight + 100) {
            fadeinItem[i].classList.add('scrollin');
        }
    }
};

window.addEventListener('load', scrollFadeIn);
window.addEventListener('scroll', scrollFadeIn);

