//bgm
   var bgm = document.getElementById('bgm');
        var musicSrc = $(".m_off iframe").attr('src'); 
        $(".m_off").click(function(e){
            e.preventDefault();
            if(bgm.paused){
              bgm.play();
              $(".m_off img").attr('src','img/music_on.png');
            }else{
              bgm.pause();
              $(".m_off img").attr('src','img/music_off.png');
            }
        });


